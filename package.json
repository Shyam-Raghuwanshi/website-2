    "@vercel/analytics": "^1.3.2",
    "lodash-es": "^4.17.21",
    "next": "15.0.1",
    "nextra": "3.1.1",
    "nextra-theme-docs": "3.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@perfsee/webpack": "^1.13.0",
    "@types/node": "^22.8.1",
    "@types/react": "^18.3.12",
    "@types/sharp": "^0.32.0",
    "@types/webpack": "^5.28.5",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "file-loader": "^6.2.0",
    "husky": "9",
    "lint-staged": "^15.2.10",
    "next-mdx-remote": "^5.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vercel": "^37.12.1"
  },
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "build:en": "next build",
    "build:cn": "cross-env LOCALE=cn next build",
    "build:pt-BR": "cross-env LOCALE=pt-BR next build",
    "format": "prettier -w .",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|yml|yaml|json|md|mdx)": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.5.1"
